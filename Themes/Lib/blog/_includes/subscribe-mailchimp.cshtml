---
layout: master
action-url: http://docify.net/logo.svg
---
@using RazorLight
@inherits TemplatePage<Xarial.Docify.Core.Compiler.Context.IncludeContextModel>
@{ 
    var url = Model.Data.Get<string>("action-url");
}
<style>
#mc-embedded-subscribe-form {
    background-color: gray;
    width: 100%;
    height: 100%;
    padding: 5px;
    box-shadow: 0px 0px 5px gray;
}
.subs-title {
    width: 100%;
    height: 100%;
    text-align: center;
    color: rgb(255, 255, 255);
    font: bold 16px "trebuchet MS", "Tahoma";
}
#mce-EMAIL {
    background-color: white;
    color: darkgray;
    height: 100%;
    border: 1px solid darkgray;
    padding: 15px 0px;
    text-align: center;
    height: 18px;
    width: 100%;
}
#mc-embedded-subscribe {
    background-color: rgb(243, 93, 92);
    border: 1px solid rgb(215, 84, 83);
    color: white;
    width: 100%;
    font: bold 16px "trebuchet MS", "Tahoma";
    padding: 15px;
    text-align: center;
    height: 50px;
    margin: 10px auto;
    cursor: pointer;
}

#mc-embedded-subscribe:hover {
    background-color: red;
    border: 1px solid red;
}
</style>
<div id="mc_embed_signup">
    <form action="@url" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
        <div id="mc_embed_signup_scroll">
            <h4 class="subs-title">Subscribe to Newsletter</h4>
            <input type="email" value="" placeholder="Your Email" name="EMAIL" class="required email" id="mce-EMAIL">
            <div id="mce-responses" class="clear">
                <div class="response" id="mce-error-response" style="display:none"></div>
                <div class="response" id="mce-success-response" style="display:none"></div>
            </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_80eb2611733fd7a2ba86f5765_da6bbce27d" tabindex="-1" value=""></div>
            <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
        </div>
    </form>
</div>