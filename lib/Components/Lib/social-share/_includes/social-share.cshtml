---
@using RazorLight
@using System
@inherits TemplatePage<Xarial.Docify.Base.Context.IContextModel>
@{
    var color = Model.Data.Get<string>("color");

    var linkedinColor = "#0077B5";
    var facebookColor = "#1877F2";
    var pinterestColor = "#BD081C";
    var redditColor = "#FF4500";

    if (!string.IsNullOrEmpty(color))
    {
        linkedinColor = color;
        facebookColor = color;
        pinterestColor = color;
        redditColor = color;
    }
}
<div class="social-share-list">
    <i>Share</i>
    @if (Model.Data.Get<bool>("linkedin"))
    {
        <a href="https://www.linkedin.com/shareArticle?mini=true&url=@Model.Page.FullUrl" onclick="window.open(this.href, 'pop-up', 'left=20,top=20,width=900,height=500,toolbar=1,resizable=0'); return false;" title="Share on LinkedIn">
            <svg alt="Share on LinkedIn" class="social-share-link" fill="@linkedinColor" xmlns:xlink="http://www.w3.org/1999/xlink">
                <use xlink:href="/assets/images/social-share.svg#linkedin" />
            </svg>
        </a>
    }
    @if (Model.Data.Get<bool>("facebook"))
    {
        <a href="https://www.facebook.com/sharer/sharer.php?u=@Model.Page.FullUrl" onclick="window.open(this.href, 'pop-up', 'left=20,top=20,width=900,height=500,toolbar=1,resizable=0'); return false;" title="Share on Facebook" target="_blank">
            <svg alt="Share on Facebook" class="social-share-link" fill="@facebookColor">
                <use xlink:href="/assets/images/social-share.svg#facebook" />
            </svg>
        </a>
    }
    @if (Model.Data.Get<bool>("pinterest"))
    {
        <a href="https://www.pinterest.com/pin/create/button/?url=@Model.Page.FullUrl" onclick="window.open(this.href, 'pop-up', 'left=20,top=20,width=900,height=500,toolbar=1,resizable=0'); return false;" title="Share on Pinterest" target="_blank">
            <svg alt="Share on Pinterest" class="social-share-link" fill="@pinterestColor">
                <use xlink:href="/assets/images/social-share.svg#pinterest" />
            </svg>
        </a>
    }
    @if (Model.Data.Get<bool>("reddit"))
    {
        <a href="http://www.reddit.com/submit?url=@Model.Page.FullUrl" onclick="window.open(this.href, 'pop-up', 'left=20,top=20,width=900,height=500,toolbar=1,resizable=0'); return false;" title="Share on Reddit" target="_blank">
            <svg alt="Share on Reddit" class="social-share-link" fill="@redditColor">
                <use xlink:href="/assets/images/social-share.svg#reddit" />
            </svg>
        </a>
    }
</div>