---
layout: default
---
@using RazorLight
@using System
@inherits TemplatePage<Xarial.Docify.Base.Context.IContextModel>
<article class="post">
    <header>
        <h1 class="page-title">@Xarial.Docify.Lib.Tools.PageHelper.GetTitle(Model.Page, Model.Site.Configuration)</h1>
        <div style="margin: 10px 0px 10px">
            <a class="disqus-comments" href="@Model.Page.FullUrl#disqus_thread" data-disqus-identifier="@Model.Page.FullUrl"></a>
        </div>
        {% social-share %}
        <hr />
    </header>
    <div>
        {{ content }}
    </div>
    {% disqus %}
</article>