---
base-url:
url:
text: Edit
enable: true
---
@using System
@model Xarial.Docify.Base.Context.IContextModel
@functions{
    public class EditLink
    {
        public string BaseUrl { get; set; }
        public string Url { get; set; }
        public string Text { get; set; }
        public bool Enable { get; set; }
    }
}
@{
    var data = Model.Data.ToObject<EditLink>();

    if (string.IsNullOrEmpty(data.Url) && !string.IsNullOrEmpty(data.BaseUrl))
    {
        data.Url = data.BaseUrl.TrimEnd('/') + Model.Page.Url.TrimEnd('/') + "/index.md";
    }

    if (string.IsNullOrEmpty(data.Url))
    {
        data.Enable = false;
    }
}
@if (data.Enable)
{
    <a href="@data.Url" class="edit-link-url">
        <img width="24" height="24" class="edit-link-icon" alt="@data.Text" src="/_assets/images/edit-icon.svg" /><span class="edit-link-text">@data.Text</span>
    </a>
}